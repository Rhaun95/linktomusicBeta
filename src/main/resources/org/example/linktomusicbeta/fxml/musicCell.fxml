<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<HBox fx:id="trackContainer" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" >

    <!-- 이미지 -->
    <ImageView fx:id="image" fitWidth="50" fitHeight="50" style="-fx-border-color: green; -fx-border-width: 1;" />

    <!-- 제목과 아티스트를 표시하는 VBox -->
    <VBox fx:id="labels" spacing="5" alignment="CENTER_LEFT" style="-fx-max-width: 190px; -fx-border-color: blue; -fx-border-width: 1;">
        <Label fx:id="title"  style="-fx-max-width: 180px; -fx-text-overflow: ellipsis;" />
        <Label fx:id="artist" style="-fx-max-width: 100px; "/>
    </VBox>
    <Region HBox.hgrow="ALWAYS" />
    <!-- 버튼을 감싸는 HBox -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-max-width: 100px;">
        <Button fx:id="optionBtn" text="다운" />
<!--        <Button fx:id="optionBtn" text="플레이" />-->
    </HBox>
</HBox>
